object Wristband of Clothing
	properties
		name "Wristband"
		basicName "wristband"
		view 10300
		clutStart 44
		color 63
		value 90
		armor 80
		health 60
		strength 1
		armorType 3

		# add fire immunity
		affect 1 2 0 -1

		# remove rust immunity
		caffect 11
	end

	base carryable
		weight 0.5
	end

	base wearable
		areaWorn 4
		layer 40
	end

	base described
		text "You see a pair of wristbands."
		shopText "They protect your arms and look cool too."
	end
end

